@model MVCLayer.Models.Order

@{
    ViewBag.Title = "Invoice";
}



<div class="container">
    <div class="row">
        <div class="col-md-5 col-xs-12">
            <h4 style="color:deepskyblue; font-weight:600" class="col-lg-6">ORDER No.</h4>
            <h4 style="text-align:justify; font-weight:600" class="col-lg-6">@Model.OrderID</h4>
            <br />
            <br />
            <h5 style="color:deepskyblue" class="col-lg-6">Invoice Date</h5>
            <h5 style="text-align:justify" class="col-lg-6">@DateTime.Now.ToShortDateString()</h5>
            <br />
            <br />
            <br /><br />
            <h5 style="color:deepskyblue" class="col-lg-12">Bill To</h5>
            <h5 style="text-align:justify" class="col-lg-12">@Model.Customer.FirstName @Model.Customer.LastName</h5>
            <h5 style="text-align:justify" class="col-lg-12">Phone: @Model.Customer.PhoneNo</h5>
            <h5 style="text-align:justify" class="col-lg-12">Address: @Model.Customer.CAddress </h5>
        </div>
        <div class="col-md-5 col-xs-12 col-md-offset-1">
            <h4 style="font-size:35px">Laundry Management System</h4>
            <br />
            <h5 style="color:deepskyblue" class="col-lg-12">Ship To</h5>
            <h5 style="text-align:justify" class="col-lg-12">@Model.Customer.FirstName @Model.Customer.LastName</h5>
            <h5 style="text-align:justify" class="col-lg-12">Phone: @Model.Customer.PhoneNo</h5>
            <h5 style="text-align:justify" class="col-lg-12">Address: @Model.Customer.CAddress </h5>
        </div>
    </div>
    <hr style="border-top: 3px solid deepskyblue" />
    <div class="container">
        <div class="row" style="border-bottom: 1px solid deepskyblue; width:100%">
            <div class="col-xs-2">
                S.No.
            </div>
            <div class="col-xs-4">
                Laundry Type
            </div>
            <div class="col-xs-2" style="text-align:right" >
                Quantity
            </div>
            <div class="col-xs-2" style="text-align:right">
                Rate
            </div>
            <div class="col-xs-2" style="text-align:right">
                Amount
            </div>
        </div>
    </div>
    <div class="container">
        <br />
        <div class="row" style="width:100%">
            <div class="col-xs-2">
                1
            </div>
            <div class="col-xs-4">
               @Model.Laundry.type
            </div>
            <div class="col-xs-2" style="text-align:right" id="qty">
               @Model.Quantity
            </div>
            <div class="col-xs-2" style="text-align:right" id="cost">
               @Math.Round(Model.Laundry.CostPerUnit, 2)
            </div>
            <div class="col-xs-2" style="text-align:right" id="amount">
                
            </div>
        </div>
    </div>
</div>
<br /><br /><br /><br /><br /><br /><br /><br />
<hr style="border-top: 1px solid deepskyblue" />
<div class="container">
    <div class="row" style="width:100%">
        <div class="col-xs-10" style="text-align:right;font-weight:600">
            Total :
        </div>
        <div class="col-xs-2" style="text-align:right" id="total">
            Rs
        </div>
    </div>
</div>
<hr style="border-top: 1px solid deepskyblue" />
@section scripts{
<script>
    $(document).ready(function () {
        var cost = parseFloat($("#cost").text());
        var qty = parseFloat($("#qty").text());
        var amt = cost * qty;
        $("#amount").text(amt);
        $("#total").text("Rs " + amt);
    })
</script>
    }
