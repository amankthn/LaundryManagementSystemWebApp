@model IEnumerable<MVCLayer.Models.Account>

@{
    ViewBag.Title = "Index";
}

<h2>Accounts</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AccID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pending)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustID)
        </th>
        <th>
            Customer Name
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Customer.Username)
        </th>
        <th>Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AccID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccStatus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pending)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.FirstName)
            @Html.DisplayFor(modelItem => item.Customer.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.Username)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AccID })
            @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
        </td>
    </tr>
}

</table>
